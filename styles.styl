

$cardWidth = 11rem
$cardHeight = 15rem
$zoneHeight = 1.8rem
_attributeHeight = 0.9rem
$powerHeight = 0.8rem
_colorBoxWidth = 1.8rem
_colorBoxHeight = 0.9rem

pos1 = 0.25
pos2 = pos1 +0.04
pos3 = pos2 +0.09


body
    background: #e3e3e3;
    overflow: hidden;
    margin: 0;
    padding: 0;
    text-align: center;
    font-family Helvetica
    letter-spacing 1px
    
    .buttons
        float left
    #board
        margin-top: 0%;
        display: inline-block;
        background white
        width 80vw
        height 80vh

.card
    height $cardHeight
    width $cardWidth
    background-color black
    position absolute
    //border solid 0.2rem black
    overflow hidden
    border-radius 3%
    .cardImage
        height 100%
        //width 100%
        position absolute
        bottom 1rem
        left 0
    .bgGradient
        height 100%
        width 100%
        position absolute
        top 0
        left 0
        background linear-gradient(transparent, black)
        opacity 0.5
        //background linear-gradient(red, yellow)
    .icon
        height $zoneHeight*0.95
        //width $zoneHeight*0.95
        position relative
        float left
        top 0.2rem
        left 0.2rem
    .zone-wrapper
        top 0.2rem
        left 0.2rem
        background black
        height $zoneHeight
        width $zoneHeight
        position absolute
        border-radius 12%
        .icon
            height $zoneHeight*0.95
            width $zoneHeight*0.95
            //position absolute
            display inline-block
            top 0.2rem
            left 0.2rem
        .zoneDiv
            background white
            _factor = 0.85
            height $zoneHeight*_factor
            width $zoneHeight*_factor
            position absolute
            margin $zoneHeight*(0.5 - _factor/2)
            border-radius 12%
            .icon
                height 95%
                width 95%
                    
            .cardClass
                color white
                display inline-block
                float left
                margin-left 0.3rem
                font-weight bold
                font-size 150%
    .cardPower
        color white
        position absolute
        top $zoneHeight+1.5rem
        left 0.2rem
        .block
            display block
            width $powerHeight
            height $powerHeight
            background white
            margin-bottom 0.3rem
            border-radius 20%
    .cardAttribute
        color white
        margin-left 0.3rem
        position absolute
    .playBtn
        color white
        font-weight bold
        font-size 150%
        background #000000d6
        padding 0.5rem
        display none
        position relative
        &:hover
            cursor pointer
            background #777
        &:active
            background yellow
            
    .attributeDiv
        width $cardWidth
        height _attributeHeight
        bottom $cardHeight*pos3
        position absolute
        text-align left
        .attribute
            height 100%
            height _attributeHeight
            display inline-block
            position relative
            //background white
            margin-left 0.2rem
            border-radius 4%
            opacity 0.8
            //transform: rotate(5deg);
            img
                height 120%
                position relative
            .attrText
                font-weight bold
                position absolute
                left 0.1rem
                top 0
                text-align center
    
    .title
        background white
        $_margin = 0.2rem
        width $cardWidth - $_margin*2
        height 1rem
        margin 0 $_margin
        position absolute
        bottom $cardHeight*pos2
        font-weight bold
        font-size 80%
        clip-path: polygon(0 0, 100% 0, 98% 100%, 0 100%);
        opacity 0.9
    .colorBox
        width _colorBoxWidth
        height _colorBoxHeight
        position absolute
        bottom 0
        background black
        left  $cardWidth*0.5 - _colorBoxWidth*0.5
        border-radius 12%
        
    .textBox
        background white
        $_margin = 0.2rem
        width $cardWidth - $_margin*2
        height $cardHeight*pos1
        margin 0 $_margin
        bottom 0.3rem
        position absolute
        font-size 60%
        font-family Tahoma
        border-radius 3%
        letter-spacing 0.01rem
        opacity 0.8
        text-align left
        overflow hidden
        .text
            margin-left 0.2rem
        .linkSymbol
            display inline-block
            height 0.75rem
            vertical-align text-bottom
        &:hover
            height $cardHeight*0.6
            font-size 120%
        
    
    &.selected
        .playBtn
            display block !important
    &:hover
        //border solid 0.2rem yellow
        .playBtn
            display block !important