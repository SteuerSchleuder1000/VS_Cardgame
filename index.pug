doctype html
html(lang='en')
    head
        title VS Card Game
        link(rel='stylesheet', href='styles.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

    body
        .buttons
            button#resetBtn Reset
        #board
            img(id='bgImage' src='images/bgImage.jpg')
            #opHand
            #playPile
                .heroPile
                .opPile
            #heroHand
            .overlay
                //button.close Close
            .heroPiles.pileDiv
                .deck.pile
                    img(src='images/cardBack.png' class='deckImage')
                    .deckText.pileText 30
                .discardPile.pile
                    img(src='images/cardBack.png' class='discardImage')
                    .discardText.pileText 
                .sourcePile.pile
                    img(src='images/cardBack.png' class='sourceImage')
                    .sourceText.pileText 
                .damagePile.pile
                    img(src='images/cardBack.png' class='damageImage')
                    .damageText.pileText 
                button.showDeck Show Deck
                .topDeckDiv
                    button.plus +
                    button.topDeck Top Deck
                    button.minus -
                button.shuffleDeck Shuffle
                button.sortHand Sort Hand
            .opPiles.pileDiv
                .deck.pile
                    img(src='images/cardBack.png' class='deckImage')
                    .deckText.pileText 30
                .discardPile.pile
                    img(src='images/cardBack.png' class='discardImage')
                    .discardText.pileText 
                .sourcePile.pile
                    img(src='images/cardBack.png' class='sourceImage')
                    .sourceText.pileText 
                .damagePile.pile
                    img(src='images/cardBack.png' class='damageImage')
                    .damageText.pileText 
                button.showDeck Show Deck
                .topDeckDiv
                    button.plus +
                    button.topDeck Top Deck
                    button.minus -
                button.shuffleDeck Shuffle
                button.sortHand Sort Hand
        

        script(src='script.js')
        script(src='game.js')
        script(src='player.js')
        script(src='piles.js')
        script(src='card.js')
        script(src='randomCard.js')
        script(src='cardLib.js')